# TableChat Environment Configuration
# Copy this file to .env and fill in your values

# ==============================================
# LLM Configuration (OpenAI-compatible API)
# ==============================================
# API Key for LLM service (OpenAI or compatible)
LLM_API_KEY=

# API Base URL (default: https://api.openai.com/v1)
LLM_API_BASE=https://api.openai.com/v1

# Model to use (default: gpt-4o-mini)
LLM_MODEL=gpt-4o-mini

# ==============================================
# Agent Configuration (Anthropic Claude)
# ==============================================
# API Key for Agent service (Anthropic)
AGENT_API_KEY=

# API Base URL (optional, for custom endpoints)
AGENT_API_BASE=

# Agent model (default: claude-sonnet-4-5-20250929)
AGENT_MODEL=claude-sonnet-4-5-20250929

# Agent maximum turns (default: 20)
AGENT_MAX_TURNS=20

# Agent timeout in seconds (default: 120)
AGENT_TIMEOUT=120

# ==============================================
# Database Configuration
# ==============================================
# SQLite database path (default: /app/data/scinew.db)
DATABASE_PATH=/app/data/scinew.db

# ==============================================
# Server Configuration
# ==============================================
# Backend host (default: 0.0.0.0)
# HOST=0.0.0.0

# Backend port (default: 7888)
# PORT=7888

# Debug mode (default: false)
# DEBUG=false

# ==============================================
# Connection Timeouts
# ==============================================
# PostgreSQL connection timeout in seconds (default: 10)
PG_CONNECT_TIMEOUT=10

# MySQL connection timeout in seconds (default: 10)
MYSQL_CONNECT_TIMEOUT=10
